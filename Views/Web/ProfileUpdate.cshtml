@using Microsoft.AspNetCore.Http;

@model Nexus_Service_Marketing_System.Models.accounts

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">

    <!-- ======= Our Profile Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Profile</h2>
                <ol>
                    <li><a asp-controller="Web" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Web" asp-action="Profile" asp-route-id="@Context.Session.GetString("accId")">Profile</a></li>
                    <li>Update</li>
                </ol>
            </div>

        </div>
    </section><!-- End Our Profile Section -->

    <!-- ======= Profile Section ======= -->
    <section class="breadcrumb">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <h4>Update Profile</h4>
                                    <hr>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div>
                                        <form asp-controller="Web" asp-action="ProfileUpdate">
                                            <table class="col-12">
                                                <tr><td colspan="3"><div asp-validation-summary="ModelOnly" class="text-danger"></div></td></tr>
                                                <tr>
                                                    <td><label asp-for="Account_id" class="control-label"></label></td>
                                                    <td><input asp-for="Account_id" value="@Model.Account_id" class="form-control text-dark" readonly /></td>
                                                </tr>
                                                <tr>
                                                    <td><label asp-for="Account_name" class="control-label"></label></td>
                                                    <td><input asp-for="Account_name" class="form-control" /></td>
                                                    <td><span asp-validation-for="Account_name" class="text-danger"></span></td>
                                                </tr>

                                                @if (Context.Session.GetString("accRole") == "SalesPerson")
                                                {
                                                    <tr>
                                                        <td><label asp-for="Account_retailShowroom_id" class="control-label"></label></td>
                                                        <td><input asp-for="Account_retailShowroom_id" readonly="readonly" value="@Model.Account_retailShowroom_id" class="form-control" /></td>
                                                        <td><span asp-validation-for="Account_retailShowroom_id" class="text-danger"></span></td>
                                                    </tr>
                                                }

                                                <tr>
                                                    <td><label asp-for="Account_password" class="control-label"></label></td>
                                                    <td><input type="password" asp-for="Account_password" value="@Model.Account_password" class="form-control" /></td>
                                                    <td><span asp-validation-for="Account_password" class="text-danger"></span></td>
                                                </tr>
                                                <tr>
                                                    <td><label asp-for="Account_phone" class="control-label"></label></td>
                                                    <td><input asp-for="Account_phone" class="form-control" /></td>
                                                    <td><span asp-validation-for="Account_phone" class="text-danger"></span></td>
                                                </tr>
                                                <tr>
                                                    <td><label asp-for="Account_email" class="control-label"></label></td>
                                                    <td><input asp-for="Account_email" type="email" class="form-control" /></td>
                                                    <td><span asp-validation-for="Account_email" class="text-danger"></span></td>
                                                </tr>
                                                <tr>
                                                    <td><label asp-for="Account_address" class="control-label"></label></td>
                                                    <td><input asp-for="Account_address" class="form-control" /></td>
                                                    <td><span asp-validation-for="Account_address" class="text-danger"></span></td>
                                                </tr>
                                                <tr>
                                                    <td><label asp-for="Account_role" class="control-label"></label></td>
                                                    <td><input asp-for="Account_role" value="@Model.Account_role" class="form-control" readonly="readonly" /></td>
                                                </tr>
                                            </table>

                                            <br />

                                            <input type="button" data-toggle="modal" data-target="#modalConfirm" value="Save" class="btn btn-outline-info" />

                                            <!-- Modal -->
                                            <div id="modalConfirm" class="modal" tabindex="-1" role="dialog">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Alert</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">Are you sure you want to update your information?</div>
                                                        <div class="modal-footer">
                                                            <button type="submit" class="btn btn-info mr-2">Confirm</button>
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div><!-- End Modal -->
                                        </form>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Profile Section -->

</main>