@model IEnumerable<Nexus_Service_Marketing_System.Models.equipments>

@{
    ViewData["Title"] = "Equipments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">

    <!-- ======= Our Equipments Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Equipments</h2>
                <ol>
                    <li><a asp-controller="Web" asp-action="Index">Home</a></li>
                    <li>Products</li>
                    <li>Equipments</li>
                </ol>
            </div>

        </div>
    </section><!-- End Our Equipments Section -->

    <!-- ======= Equipments Section ======= -->
    <section class="products">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <ul id="products-filters">
                        <li data-filter="*" class="filter-active">All</li>
                        <li data-filter=".filter-modem">Modem</li>
                        <li data-filter=".filter-router">Router</li>
                        <li data-filter=".filter-cable">Cable</li>
                    </ul>
                </div>
            </div>

            <div class="row products-container" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">

                @foreach (var item in Model)
                {
                    @if (item.Equipment_type.Equals("Modem"))
                    {
                        <div class="col-lg-4 col-md-6 filter-modem">
                            <div class="equipment-item">
                                <img src="~/assets/img/products/@Url.Content(item.Equipment_image_thumbnail)" class="img-fluid" alt="">
                                <div class="equipment-info">
                                    <div>
                                        <a href="~/assets/img/products/@Url.Content(item.Equipment_image_thumbnail)" data-gall="" class="venobox" title="@item.Equipment_name"><i class="bx bx-plus"></i></a>
                                        <a asp-controller="Web" asp-action="Equipments" asp-route-id="@item.Equipment_id" title="Equipment Details"><i class="bx bx-link"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (item.Equipment_type.Equals("Router"))
                    {
                        <div class="col-lg-4 col-md-6 filter-router">
                            <div class="equipment-item">
                                <img src="~/assets/img/products/@Url.Content(item.Equipment_image_thumbnail)" class="img-fluid" alt="">
                                <div class="equipment-info">
                                    <div>
                                        <a href="~/assets/img/products/@Url.Content(item.Equipment_image_thumbnail)" data-gall="" class="venobox" title="@item.Equipment_name"><i class="bx bx-plus"></i></a>
                                        <a asp-controller="Web" asp-action="Equipments" asp-route-id="@item.Equipment_id" title="Equipment Details"><i class="bx bx-link"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (item.Equipment_type.Equals("Cable"))
                    {
                        <div class="col-lg-4 col-md-6 filter-cable">
                            <div class="equipment-item">
                                <img src="~/assets/img/products/@Url.Content(item.Equipment_image_thumbnail)" class="img-fluid" alt="">
                                <div class="equipment-info">
                                    <div>
                                        <a href="~/assets/img/products/@Url.Content(item.Equipment_image_thumbnail)" data-gall="" class="venobox" title="@item.Equipment_name"><i class="bx bx-plus"></i></a>
                                        <a asp-controller="Web" asp-action="Equipments" asp-route-id="@item.Equipment_id" title="Equipment Details"><i class="bx bx-link"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }                

            </div>

        </div>
    </section><!-- End Equipments Section -->

</main><!-- End #main -->
