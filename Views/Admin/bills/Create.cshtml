@model Nexus_Service_Marketing_System.Models.bills

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Create</h1>

<h4>Bills</h4>

<hr />

<div class="row">
    <div class="col-4">
        <form asp-controller="Bills" asp-action="Create" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <table class="table">
                <tr>
                    <td><label asp-for="Bill_id" class="control-label"></label></td>
                    <td><input asp-for="Bill_id" value="@ViewBag.BillId" readonly /></td>
                    <td><span asp-validation-for="Bill_id" class="text-danger"></span></td>
                </tr>

                @if (ViewBag.OrderId != null)
                {
                    <tr>
                        <td><label asp-for="Bill_order_id" class="control-label"></label></td>
                        <td><input asp-for="Bill_order_id" value="@ViewBag.OrderId" readonly /></td>
                        <td><span asp-validation-for="Bill_order_id" class="text-danger"></span></td>
                    </tr>
                }

                @if (ViewBag.TrackId != null)
                {
                    <tr>
                        <td><label asp-for="Bill_track_id" class="control-label"></label></td>
                        <td><input asp-for="Bill_track_id" value="@ViewBag.TrackId" readonly /></td>
                        <td><span asp-validation-for="Bill_track_id" class="text-danger"></span></td>
                    </tr>
                }
            </table>

            <br />

            <input type="button" data-toggle="modal" data-target="#modalConfirm" value="Create" class="btn btn-primary" />
            <input type="reset" value="Reset" class="btn btn-danger" />

            <!-- Modal -->
            <div id="modalConfirm" class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Alert</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">Are you sure you want to create this bill?</div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-info mr-2">Confirm</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div><!-- End Modal -->

        </form>

        <div>
            <a asp-controller="Bills" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

<br />

<h3 class="text-light">@ViewBag.Msg</h3>