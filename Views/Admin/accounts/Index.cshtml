@model IEnumerable<Nexus_Service_Marketing_System.Models.accounts>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Index</h1>

<h4>Accounts</h4>

<hr />

<p>
    <a asp-controller="Accounts" asp-action="Create"><i class="material-icons" style="padding-right: 10px">playlist_add</i>Create New</a>
</p>

<hr />

@using (Html.BeginForm())
{
    <input type="text" name="txtAccId" placeholder="Enter account id..." />
    <input type="submit" name="btnSearch" value="Search" class="btn-outline-info" />
}

<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account_phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account_status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account_role)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Account_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account_phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account_status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account_role)
                </td>
                <td>
                    <a asp-controller="Accounts" asp-action="Details" asp-route-id="@item.Account_id"><button class="btn-outline-info">Details</button></a>
                    <a asp-controller="Accounts" asp-action="Update" asp-route-id="@item.Account_id"><button class="btn-outline-primary">Edit</button></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />

<div class="d-flex justify-content-center">
    <h3 class="text-light">@ViewBag.Msg</h3>
</div>