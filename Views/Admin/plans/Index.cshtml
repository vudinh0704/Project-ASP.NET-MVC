@model IEnumerable<Nexus_Service_Marketing_System.Models.plans>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Index</h1>

<h4>Plans</h4>

<hr />

<p>
    <a asp-controller="Plans" asp-action="Create"><i class="material-icons" style="padding-right: 10px">playlist_add</i>Create New</a>
</p>

<hr />

@using (Html.BeginForm())
{
    <input type="text" name="txtPlanName" placeholder="Enter plan name..." />
    <input type="submit" name="btnSearch" value="Search" class="btn-outline-info" />
}

<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Plan_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan_image_thumbnail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan_connection_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan_description)
            </th>            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Plan_name)
            </td>
            <td>
                <img src="~/assets/img/products/@item.Plan_image_thumbnail" width="100" height="75" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plan_connection_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plan_description)
            </td>
            <td>
                <a asp-controller="Plans" asp-action="Details" asp-route-id="@item.Plan_id"><button class="btn-outline-info">Details</button></a>
                <a asp-controller="Plans" asp-action="Update" asp-route-id="@item.Plan_id"><button class="btn-outline-primary">Edit</button></a>
            </td>
        </tr>
        }
    </tbody>
</table>

<br />

<div class="d-flex justify-content-center">
    <h3 class="text-light">@ViewBag.Msg</h3>
</div>